{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "ext-simplexml": "*",
        "laravel/framework": "^12.19.3",
        "laravel/nightwatch": "^1.9.1",
        "laravel/tinker": "^2.10.1",
        "league/commonmark": "^2.7.0",
        "spatie/yaml-front-matter": "^2.1.0",
        "symfony/yaml": "^7.4.0",
        "torchlight/torchlight-laravel": "^0.6.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24.1",
        "laravel/pint": "^1.22.1",
        "laravel/sail": "^1.43.1",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.2",
        "pestphp/pest": "^4.0.0",
        "pestphp/pest-plugin-browser": "^4.0.0",
        "pestphp/pest-plugin-laravel": "^4.0.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.4"
        },
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": [
            "vendor/bin/pint"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "bump:minor": [
            "composer update && composer bump"
        ],
        "lint": [
            "pint"
        ],
        "test:lint": [
            "pint --test"
        ],
        "test:unit": "pest --parallel",
        "test": [
            "@test:lint",
            "@test:unit"
        ]
    }
}
